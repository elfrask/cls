# Declaraciones tipo C

void main() {

    String opcion = input("opcion 1, 2, 3: ");


    switch (opcion) {
        case default {
            print("Opcion por defecto");
        };
        case ("1") {
            print("Opcion 1");
        };
        case ("2") {
            print("Opcion 2");
        };
        case ("3") {
            print("Opcion 3");
        };
    };
};

main();



